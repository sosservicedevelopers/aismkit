    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ListOfSubInstitutions</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NameRus" class="control-label"></label>
                <input asp-for="NameRus" class="form-control" />
                <span asp-validation-for="NameRus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NameKyrg" class="control-label"></label>
                <input asp-for="NameKyrg" class="form-control" />
                <span asp-validation-for="NameKyrg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="INN" class="control-label"></label>
                <input asp-for="INN" class="form-control" />
                <span asp-validation-for="INN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DictTypeOfSubId" class="control-label"></label>
                <select asp-for="DictTypeOfSubId" class="form-control" asp-items="ViewBag.DictTypeOfSubId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Fax" class="control-label"></label>
                <input asp-for="Fax" class="form-control" />
                <span asp-validation-for="Fax" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfCreated" class="control-label"></label>
                <input asp-for="DateOfCreated" class="form-control" />
                <span asp-validation-for="DateOfCreated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BriefInfo" class="control-label"></label>
                <input asp-for="BriefInfo" class="form-control" />
                <span asp-validation-for="BriefInfo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DictRegionId" class="control-label"></label>
                <select asp-for="DictRegionId" class="form-control" asp-items="ViewBag.DictRegionId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DictDistrictId" class="control-label"></label>
                <select asp-for="DictDistrictId" class="form-control" asp-items="ViewBag.DictDistrictId"></select>
            </div>
            <div class="form-group">
                <label asp-for="AddressRus" class="control-label"></label>
                <input asp-for="AddressRus" class="form-control" />
                <span asp-validation-for="AddressRus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddressKyrg" class="control-label"></label>
                <input asp-for="AddressKyrg" class="form-control" />
                <span asp-validation-for="AddressKyrg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script type="text/javascript">

    $(document).ready(function () {

        $("#DictRegionId").change(function () {

            $("#DictDistrictId").empty();

            $.ajax({

                type: 'POST',

                url: '@Url.Action("GetDicts")',

                dataType: 'json',

                data: { id: $("#DictRegionId").val() },

                success: function (subcategories) {

                    //console.log(subcategories);

                    $.each(subcategories, function (i, subcategory) {

                        $("#DictDistrictId").append('<option value="' + subcategory.value + '">' + subcategory.text + '</option>');

                        //console.log('<option value="' + subcategory.value + '">' + subcategory.text + '</option>');

                    });

                },

                error: function (ex) {

                    console.log('Failed to retrieve Sub Categories : ' + ex);

                }

            });

            return false;

        })

    });
</script>
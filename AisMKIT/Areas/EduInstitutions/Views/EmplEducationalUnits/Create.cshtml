@model AisMKIT.Models.EmplEducationalUnit

@{
    ViewData["Title"] = "Create";
}

<h1>Добавление</h1>

<h4>Сотрудник в подразделении</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label"></label>
                <select asp-for="EmployeeId" class ="form-control" asp-items="ViewBag.EmployeeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="EducationalUnitId" class="control-label"></label>
                <select asp-for="EducationalUnitId" class ="form-control" asp-items="ViewBag.EducationalUnitId"></select>
            </div>
            <div class="form-group">
                <label asp-for="WorkStartDate" class="control-label"></label>
                <input asp-for="WorkStartDate" class="form-control" />
                <span asp-validation-for="WorkStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkEndDate" class="control-label"></label>
                <input asp-for="WorkEndDate" class="form-control" />
                <span asp-validation-for="WorkEndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FacultyId" class="control-label"></label>
                <select asp-for="FacultyId" class ="form-control" asp-items="ViewBag.FacultyId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>


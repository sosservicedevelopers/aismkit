@model AisMKIT.Models.DictLegalForm

@{
    ViewData["Title"] = "Create";
}

<h1>Добавление</h1>

<h4>Организационно-правовая форма</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NameKyrg" class="control-label"></label>
                <input asp-for="NameKyrg" class="form-control" />
                <span asp-validation-for="NameKyrg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NameRus" class="control-label"></label>
                <input asp-for="NameRus" class="form-control" />
                <span asp-validation-for="NameRus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreateDate" class="control-label"></label>
                <input asp-for="CreateDate" class="form-control" />
                <span asp-validation-for="CreateDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StatusForDictId" class="control-label"></label>
                <select asp-for="StatusForDictId" class ="form-control" asp-items="ViewBag.StatusForDictId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DeactiveDate" class="control-label"></label>
                <input asp-for="DeactiveDate" class="form-control" />
                <span asp-validation-for="DeactiveDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>


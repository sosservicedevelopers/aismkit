@model AisMKIT.Models.ListOfTheatrical

@{
    ViewData["Title"] = "Create";
}

<h1>Добавление</h1>

<h4>ТЗУ</h4>
<hr />

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-row p-3 bg-argentum1">
        <div class="form-group col-md-10">
            <label asp-for="NameRus" class="control-label"></label>
            <input asp-for="NameRus" class="form-control" />
            <span asp-validation-for="NameRus" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row p-3 bg-argentum1">
        <div class="form-group col-md-5">
            <label asp-for="INN" class="control-label"></label>
            <input asp-for="INN" class="form-control" />
            <span asp-validation-for="INN" class="text-danger"></span>
        </div>
        <div class="form-group  col-md-5">
            <label asp-for="DictTheatricalLegalFormId" class="control-label"></label>
            <select asp-for="DictTheatricalLegalFormId" class="form-control" asp-items="ViewBag.DictTheatricalLegalFormId"></select>
        </div>
    </div>
    <div class="form-row p-3 bg-argentum1">
        <div class="form-group col-md-3">
            <label asp-for="NumEmployees" class="control-label"></label>
            <input asp-for="NumEmployees" class="form-control" />
            <span asp-validation-for="NumEmployees" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="DictTheatricalFinSourceId" class="control-label"></label>
            <select asp-for="DictTheatricalFinSourceId" class="form-control" asp-items="ViewBag.DictTheatricalFinSourceId"></select>
        </div>
        <div class="form-group col-md-2">
            <label asp-for="ReregistrationDate" class="control-label"></label>
            <input asp-for="ReregistrationDate" class="form-control" />
            <span asp-validation-for="ReregistrationDate" class="text-danger"></span>
        </div>
        <div class="form-group col-md-2">
            <label asp-for="DeactiveDate" class="control-label"></label>
            <input asp-for="DeactiveDate" class="form-control" />
            <span asp-validation-for="DeactiveDate" class="text-danger"></span>
        </div>
    </div>

    <div class="form-row p-3 bg-argentum2">

        <div class="form-group col-md-3">
            <label asp-for="LastNameDirector" class="control-label"></label>
            <input asp-for="LastNameDirector" class="form-control" />
            <span asp-validation-for="LastNameDirector" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="FirstNameDirector" class="control-label"></label>
            <input asp-for="FirstNameDirector" class="form-control" />
            <span asp-validation-for="FirstNameDirector" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="PatronicNameDirector" class="control-label"></label>
            <input asp-for="PatronicNameDirector" class="form-control" />
            <span asp-validation-for="PatronicNameDirector" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row p-3 bg-argentum2">
        <div class="form-group col-md-3">
            <label asp-for="LastNameOfArtsDirector" class="control-label"></label>
            <input asp-for="LastNameOfArtsDirector" class="form-control" />
            <span asp-validation-for="LastNameOfArtsDirector" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="FirstNameOfArtsDirector" class="control-label"></label>
            <input asp-for="FirstNameOfArtsDirector" class="form-control" />
            <span asp-validation-for="FirstNameOfArtsDirector" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="PatronicNameOfArtsDirector" class="control-label"></label>
            <input asp-for="PatronicNameOfArtsDirector" class="form-control" />
            <span asp-validation-for="PatronicNameOfArtsDirector" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row p-3 bg-argentum2 justify-content-center">
        <input type="submit" value="Добавить" class="btn btn-success" />
        <a asp-action="Index" class="btn btn-outline-light">Назад</a>
    </div>


</form>
